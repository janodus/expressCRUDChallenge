<% include ../partials/header %>

<div class="container">
	<h1> Add a New Spot! </h1>
	
	<div class="row">
		<div class="col-sm-12 text-center">
			<div class="centered">
				<form action="/spots" method="post">
					<input type="text" name="name" placeholder="Name of location">
					<input type="text" name="address" placeholder="Address">
					<input type="text" name="reason" placeholder="Why is this your spot?">
					<button class="btn back-to-spots btn-custom" style="margin-bottom: 26px; display: inline-block;">Add New!</button>
				</form>
				<a href="/spots"><button class="btn back-to-spots btn-custom" style="margin-bottom: 46px">Back to Home</button></a>
			</div>
		</div>
	</div>

</div>

